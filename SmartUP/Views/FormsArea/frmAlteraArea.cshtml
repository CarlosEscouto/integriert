<section class="content" style="top:50px; position: relative;">
	<div class="row">
		<div class="col s12 compensa">
			<div class="col s12" style="padding: 0 20px;">
				<style type="text/css">
					.span_forms{ padding: 0 10px; font-size: 16px;}
					.span_forms.ativo{ color: #444; }
					.picker__day--selected, .picker__day--selected:hover, .picker--focused .picker__day--selected, .picker__date-display{background: #039be5;}
				</style>
				<ul class="tab" style="margin-top: 0;">
					<li class="tab col s12 " style="background-color: #f6f6f6; padding: 10px 5px; border-radius: 10px;" >
                        <a class="" href="@Url.Action("Dash", "Home")">
                            <span class="span_forms">Home</span>
                        </a>
						/
						<a class="" href="@Url.Action("frmBuscaArea", "FormsArea")">
							<span class="span_forms">Buscar Area</span>
						</a>	
						/						
						<a class="span_forms ativo" href="#">
							<span class="span_forms">Cadastrar Area</span>
						</a>					
					</li>
				</ul>
			</div>
			<div class="row">
				<div class="col s12 " style="padding: 22px;">
					<div class="cadastroForm">
					<form action="@Url.Action("AlteraArea")" method="post">
						<h5 style="">Altera Area</h5>
						<div class="row">
							<div class="input-field col s12 m3" >
								<input id="area.nome" name="area.nome" type="text" class="validate" required>
								<label for="nome">Nome</label>
							</div>
							<div class="input-field col s12 m3" >
								<input id="area.descricao" name="area.descricao" type="text" class="validate">
								<label for="descricao">Descrição</label>
							</div>
							<div class="input-field col s12 m3" >
								<input id="area.capacMax" name="area.capacMax" type="number" class="validate" required>
								<label for="capacMax">Capacidade</label>
							</div>
                            <div class="col s12 m3" style="margin-top: 1rem;">
                                <span style="color: #777; position: relative; top: -7px;">Alugvel</span>
                                <div class="switch ">
                                    <label for="area.seAluga">
                                        Não
                                        <input type="checkbox" id="area.seAluga" name="area.seAluga" required>
                                        <span class="lever"></span>
                                        Sim
                                    </label>
                                </div>
                            </div>
						</div>
						<div class="row">
							<div class="col s3">
                                <button class="btn botao">Salvar</button>
							</div>
						</div>						
					</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
<div class="fundo"></div>