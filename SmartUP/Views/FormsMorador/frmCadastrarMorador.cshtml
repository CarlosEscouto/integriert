<section class="content" style="top:50px; position: relative;">
	<div class="row">
		<div class="col s12 compensa">
			<div class="col s12" style="padding: 0 20px;">
				<style type="text/css">
					.span_forms{ padding: 0 10px; font-size: 16px;}
					.span_forms.ativo{ color: #444; }
					.picker__day--selected, .picker__day--selected:hover, .picker--focused .picker__day--selected, .picker__date-display{background: #039be5;}
				</style>
				<ul class="tab" style="margin-top: 0;">
					<li class="tab col s12 " style="background-color: #f6f6f6; padding: 10px 5px; border-radius: 10px;" >
                        <a class="" href="@Url.Action("Dash", "Home")">
                            <span class="span_forms">Home</span>
                        </a>
						/
						<a class="" href="@Url.Action("frmBuscarMorador","FormsMorador")">
							<span class="span_forms">Buscar morador</span>
						</a>	
						/						
						<a class="span_forms ativo" href="#">
							<span class="span_forms">Cadastrar morador</span>
						</a>					
					</li>
				</ul>
			</div>
			<div class="row">
				<div class="col s12 " style="padding: 22px;">
					<div class="cadastroForm">
                        <form action="@Url.Action("CadastraMorador")" method="post">
                            <h5 style="">Cadastro de morador</h5>
                            <div class="row">
                                <div class="input-field col s12 m3">
                                    <input id="obj.nome" name="obj.nome" type="text" class="validate">
                                    <label for="obj.nome">Nome</label>
                                </div>
                                <div class="input-field col s12 m3">
                                    <input id="obj.rg" name="obj.rg" type="tel" class="validate rg">
                                    <label for="obj.rg">RG</label>
                                </div>
                                <div class="input-field col s12 m3">
                                    <input id="obj.cpf" name="obj.cpf" type="tel" class="validate cpf">
                                    <label for="obj.cpf">CPF</label>
                                </div>
                                <div class="input-field col s12 m3">
                                    <select id="obj.unidade.id_unidade" name="obj.unidade.id_unidade" required>
                                        <option value="" disabled selected>Selecione o unidade</option>
                                        @foreach (var unidade in ViewBag.lstUnidade)
                                        {
                                            <option value="@unidade.id_unidade">@unidade.identificacao</option>
                                        }
                                    </select>
                                    <label for="obj.unidade.id_unidade" style="display:none;">Selecione o unidade</label>
                                </div>
                            </div>
                            @*<div class="row">
                <div class="input-field col s12 m3" >
                    <input id="icon_prefix" type="tel" class="validate sp_celphones">
                    <label for="icon_prefix">Telefone</label>
                </div>
            </div>*@
                            <div class="row">
                                <div class="col s3">
                                    <button class="btn botao">Salvar</button>
                                </div>
                            </div>
                        </form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>
